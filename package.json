{
  "name": "second-brain-app",
  "version": "1.0.1.1",
  "description": "Desktop productivity app with React, Electron and Supabase",
  "main": "electron/main.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git@github.com:Matth-Ben/second-brain.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.309.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.10",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.secondbrain.app",
    "productName": "Second Brain",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "Matth-Ben",
        "repo": "second-brain"
      }
    ],
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false,
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.png"
    }
  }
}